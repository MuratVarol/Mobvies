<?xml version="1.0" encoding="utf-8"?>
<layout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel" type="com.example.mobvies.viewmodel.MoviesVM"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMovies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:spanCount="2"
                app:itemClickListener="@{viewModel.itemClickListener}"
                app:itemLayoutId="@{@layout/item_poster}"
                app:itemList="@{viewModel.popularMovieViewEntityList}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_poster">

        </androidx.recyclerview.widget.RecyclerView>
        <!--app:layoutAnimation="@{viewModel.layoutAnimationController}"-->


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>